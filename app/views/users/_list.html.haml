%ul.user_list
  - User.order("quote DESC").each do |user|
    %li
      = link_to user, :title => user.name do
        = image_tag(user.image)
        %span.user_game_info
          .quote= user.quote
          %span.ranking
            %i{ :class => user.ranking }
          .balanace= match_balance(user.number_of_wins, user.number_of_loses)
