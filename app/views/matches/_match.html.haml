.m-match{:class => match.crawling? ? "as-crawling" : "", id: "match_#{match.id}"}
  .m-match--date
    = l(match.date, :format => :short)
  .m-match--winner{class: match.winner_score.team.users.size < 2 ? "as-single" : ""}
    = team_pictures match.winner_score.team if match.winner_score
  .m-match--score
    = match.winner_score.goals if match.winner_score
    = ":"
    = match.loser_score.goals if match.loser_score
  .m-match--looser{class: match.loser_score.team.users.size < 2 ? "as-single" : ""}
    = team_pictures match.loser_score.team if match.loser_score
