.l-header-wrapper
  .l-header
    .m-logo
      - if league_present?
        = link_to current_league.name, league_path(current_league)
      - else
        = link_to "Kicker App", root_path
    .m-navigation-trigger
    .m-navigation
      - if league_present?
        .m-navigation--item.as-mobile-only= link_to "Alle Spiele", league_path(current_league)
        .m-navigation--item= link_to "Neues Match", new_league_match_path(current_league)
        .m-navigation--item.as-mobile-only= link_to "Ranking", league_users_path(current_league)
        .m-navigation--item= link_to "Team Ranking", league_teams_path(current_league)
        .m-navigation--item= link_to "Badges", badges_league_path(current_league)
        .m-navigation--item= link_to "Zufall Teams",shuffle_select_league_matches_path(current_league)
        .m-navigation--item
          = link_to new_league_user_path(current_league) do
            %i.icon-user-add
      - else
        .m-navigation--item= link_to "Neue Liga", new_league_path
