.m-gameplan--round{style: "height: #{basic_height}px"}
  -# = height
  - @matches[start_match..end_match].each do |match|
    
    #result-form.reveal{"data-reveal" => ""}
      = form_tag url: edit_tournament_tournament_gameplan_path  do
        %table.c-table
          %tr
            %th{colspan: 2} Hometeam
            %th Awayteam
          %tr
            %td= text_field_tag("hometeam_set_1")
            %td :
            %td= text_field_tag("awayteam_set_1")
          %tr
            %td= text_field_tag("hometeam_set_2")
            %td :
            %td= text_field_tag("awayteam_set_2")
          %tr
            %td= text_field_tag("hometeam_set_3")
            %td :
            %td= text_field_tag("awayteam_set_3")

        = submit_tag "Ergebnis speichern"
      
      %button.close-button{"aria-label" => "Close modal", "data-close" => "", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
         
    %a{ "data-open" => "result-form" }
      .m-gameplan--match
        .m-gameplan--table-nr
          Tisch:
          = match.table_nr
        .m-gameplan--team
          .m-gameplan--user= match.hometeam.player1.name if match.hometeam
          .m-gameplan--user= match.hometeam.player2.name if match.hometeam
        .m-gameplan--team
          .m-gameplan--user= match.awayteam.player1.name if match.awayteam
          .m-gameplan--user= match.awayteam.player2.name if match.awayteam
        .m-gameplan--match-number= match.tournament_position